// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:postgres@localhost:5432/prime"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                String      @id @default(cuid())
  name              String
  email             String      @unique
  rollNumber        String      @unique
  department        Department
  role              UserRole    @default(Coordinator)
  password          String
  salt              String      @unique
  profilePic        String      @default("")
  coverPic          String      @default("")
  mobile            String
  upi               String      @default("")
  finManagerForDept Department?
  enabled           Boolean     @default(false)
  verified          Boolean     @default(false)
  updates           Update[]
  tasksAssigned     Task[]      @relation("_TasksAssignedTo")
  tasksCreated      Task[]
}

model Update {
  id          String     @id @default(cuid())
  brief       String
  subject     String
  details     String
  createdOn   DateTime   @default(now())
  createdBy   User       @relation(fields: [createdById], references: [id])
  createdById String
  byDept      Department
}

model Task {
  id            String     @id @default(cuid())
  brief         String
  details       String
  deadline      DateTime
  createdOn     DateTime   @default(now())
  byDepartment  Department
  forDepartment Department
  createdBy     User       @relation(fields: [createdById], references: [id])
  createdById   String
  assignedTo    User[]     @relation("_TasksAssignedTo")
  status        TaskStatus @default(NotAssigned)
}

enum TaskStatus {
  NotAssigned
  Assigned
  InProgress
  Submitted
  Completed
}

enum UserRole {
  Coordinator
  Head
  Core
  Cocas
  Cocad
}

enum Department {
  Webops
  ConceptAndDesign
  SponsorshipAndPr
  Finance
  Qms
  OperationsAndInfrastructurePlanning
  ShowsAndExhibitions
  EventsAndWorkshops
  Publicity
  Evolve
  Envisage
  Admin
}
